<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountainback"
    tools:context="com.example.padhil.mofo.MenuForcastActivity">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:fontFamily="casual"
        android:text="GUNUNG SINABUNG"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtSuhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtName"
        android:fontFamily="monospace"
        android:text="19"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_toEndOf="@+id/txtSuhu"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/txtSuhu"
        android:text="24 February 2018" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDate"
        android:layout_toEndOf="@+id/txtSuhu"
        android:layout_toRightOf="@+id/txtSuhu"
        android:textSize="20dp"
        android:text="Mostly Cloudy" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDesc"
        android:layout_toEndOf="@+id/txtSuhu"
        android:layout_toRightOf="@+id/txtSuhu"
        android:textSize="20dp"
        android:text="Humidity:" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/txtSuhu"
        android:layout_toRightOf="@+id/txtSuhu"
        android:textSize="20dp"
        android:text="Wind:" />

    <TextView
        android:id="@+id/txtHumid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDesc"
        android:layout_toEndOf="@+id/textView11"
        android:text="51"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:textSize="20dp"
        android:text="10 m/s" />

</RelativeLayout>
